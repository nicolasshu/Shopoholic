<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/results_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:background="@color/backgroundColor_Dark"
        android:textColor="@color/textColor_White"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_val"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:paddingVertical="20dp"
        android:onClick="goBack"/>
    <TextView
        android:id="@+id/results_searchQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_title"
        android:text="Query"
        android:gravity="center"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/results_searchQuery">
        <!-- Title Sequence -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Location"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Price"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Distance"/>
        </TableRow>
        <View
            android:layout_height="5dip"
            android:background="@color/colorPrimary"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title1"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:text="Store1 (dist1)"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Price1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Go"
                android:paddingHorizontal="0dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>