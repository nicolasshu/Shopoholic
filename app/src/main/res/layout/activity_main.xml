<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nicolasshu.shopoholicv0.MainActivity"
    android:background="@color/backgroundColor_Light">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_val"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/textColor_White"
        android:background="@color/backgroundColor_Dark"
        />
    <TableLayout
        android:layout_below="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:text="#"
                android:padding="@dimen/padding_val"/>
            <TextView
                android:text="@string/main_label_item"
                android:padding="@dimen/padding_val"
                android:layout_width="200dp" />
            <TextView
                android:id="@+id/label_button"
                android:text="Ready?"
                android:layout_alignRight="@id/main_title"
                android:padding="@dimen/padding_val"/>
        </TableRow>
        <!-- =========================================== -->
        <!-- SEPARATING LINE -->
        <!-- <View
            android:layout_height="5dp"
            android:background="#FF0000"/> -->
        <!-- =========================================== -->
        <!-- ITEM 1 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:padding="@dimen/padding_val"/>
            <EditText
                android:id="@+id/item1"
                android:inputType="text"
                android:padding="@dimen/padding_val"/>
            <Button
                android:text="@string/search_button"
                android:padding="@dimen/padding_val"
                android:onClick="fn_item1"/>
        </TableRow>
        <!-- ITEM 2 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="2"
                android:padding="@dimen/padding_val"/>
            <EditText
                android:id="@+id/item2"
                android:inputType="text"
                android:padding="@dimen/padding_val" />
            <Button
                android:text="@string/search_button"
                android:padding="@dimen/padding_val"
                android:onClick="fn_item2"/>
        </TableRow>
        <!-- ITEM 3 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="3"
                android:padding="@dimen/padding_val"/>
            <EditText
                android:id="@+id/item3"
                android:inputType="text"
                android:padding="@dimen/padding_val" />
            <Button
                android:text="@string/search_button"
                android:padding="@dimen/padding_val"
                android:onClick="fn_item3"/>
        </TableRow>
        <!-- ITEM 4 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="4"
                android:padding="@dimen/padding_val"/>
            <EditText
                android:id="@+id/item4"
                android:inputType="text"
                android:padding="@dimen/padding_val" />
            <Button
                android:text="@string/search_button"
                android:padding="@dimen/padding_val"
                android:onClick="fn_item4"/>
        </TableRow>
        <!-- ITEM 5 -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="5"
                android:padding="@dimen/padding_val"/>
            <EditText
                android:id="@+id/item5"
                android:inputType="text"
                android:padding="@dimen/padding_val" />
            <Button
                android:text="@string/search_button"
                android:padding="@dimen/padding_val"
                android:onClick="fn_item5"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
